{
  "name": "ogforge",
  "version": "1.0.0",
  "private": true,
  "description": "OGforge - a single-file canvas mining game, packaged with Electron.",
  "main": "electron/main.js",
  "scripts": {
    "dev": "electron .",
    "dist": "electron-builder",
    "dist:ci": "electron-builder --publish never",
    "dist:mac": "electron-builder --mac dmg zip --publish never",
    "dist:win": "electron-builder --win nsis --x64 --publish never"
  },
  "devDependencies": {
    "@electron/notarize": "^2.3.2",
    "electron": "^31.0.0",
    "electron-builder": "^24.13.3"
  },
  "build": {
    "appId": "com.ogforge.app",
    "productName": "OGforge",
    "directories": {
      "output": "dist"
    },
    "artifactName": "OGforge-${version}-${os}-${arch}.${ext}",
    "files": [
      "index.html",
      "electron/**/*"
    ],
    "afterSign": "electron/notarize.js",
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "electron/entitlements.mac.plist",
      "entitlementsInherit": "electron/entitlements.mac.inherit.plist",
      "category": "public.app-category.games"
    },
    "win": {
      "target": [
        "nsis"
      ]
    }
  }
}
