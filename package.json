{
  "name": "ogforge",
  "productName": "OGforge",
  "version": "1.0.16",
  "private": true,
  "type": "module",
  "main": "electron/main.mjs",
  "scripts": {
    "dev": "electron .",
    "generate-icons": "node scripts/generate-icons.mjs",
    "dist:mac": "npm run generate-icons && electron-builder --mac",
    "dist:win": "npm run generate-icons && electron-builder --win --x64",
    "dist:all": "npm run dist:mac && npm run dist:win",
    "dist:publish": "npm run dist:all && node scripts/publish-updates.mjs"
  },
  "dependencies": {
    "electron-updater": "^6.7.3"
  },
  "devDependencies": {
    "electron": "^33.2.1",
    "electron-builder": "^25.1.8"
  },
  "build": {
    "appId": "com.ogforge.ogforge",
    "productName": "OGforge",
    "directories": {
      "output": "dist",
      "buildResources": "build"
    },
    "files": [
      "index.html",
      "electron/**",
      "assets/**",
      "build/icon.png"
    ],
    "afterPack": "electron/afterPack.cjs",
    "asar": true,
    "mac": {
      "category": "public.app-category.games",
      "target": [
        "dmg",
        "zip"
      ],
      "icon": "build/icon.png"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "build/icon.ico"
    },
    "nsis": {
      "oneClick": true,
      "perMachine": false,
      "allowToChangeInstallationDirectory": false
    },
    "publish": [
      {
        "provider": "generic",
        "url": "https://forge-iye0.onrender.com/updates/"
      }
    ]
  }
}
